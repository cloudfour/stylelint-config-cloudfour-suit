{
  "name": "stylelint-config-cloudfour-suit",
  "version": "3.0.0",
  "description": "Cloud Four's stylelint config + SUIT naming",
  "author": "Cloud Four",
  "keywords": [
    "stylelint",
    "stylelint-config",
    "config",
    "cloudfour",
    "css"
  ],
  "license": "MIT",
  "main": "index.js",
  "homepage": "https://github.com/cloudfour/stylelint-config-cloudfour-suit#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cloudfour/stylelint-config-cloudfour-suit.git"
  },
  "bugs": {
    "url": "https://github.com/cloudfour/stylelint-config-cloudfour-suit/issues"
  },
  "dependencies": {
    "stylelint-config-cloudfour": "^3.0.0",
    "stylelint-selector-bem-pattern": "^2.0.0"
  },
  "devDependencies": {
    "eslint": "7.8.1",
    "eslint-config-stylelint": "12.0.0",
    "jest": "26.4.2",
    "jest-preset-stylelint": "3.0.0",
    "npm-run-all": "4.1.5",
    "npmpub": "5.0.0",
    "remark-cli": "8.0.1",
    "remark-preset-lint-consistent": "3.0.1",
    "remark-preset-lint-recommended": "4.0.1",
    "stylelint": "13.7.0"
  },
  "peerDependencies": {
    "stylelint": "^9.10.1 || ^10.0.0 || ^11.0.0 || ^12.0.0 || ^13.0.0"
  },
  "scripts": {
    "dry-release": "npmpub --dry --verbose",
    "lint:js": "eslint . --ignore-path .gitignore",
    "lint:md": "remark . --quiet --frail",
    "lint": "npm-run-all --parallel lint:*",
    "pretest": "npm run lint",
    "release": "npmpub",
    "test": "jest",
    "watch": "jest --watch"
  },
  "eslintConfig": {
    "extends": [
      "stylelint"
    ]
  },
  "eslintIgnore": [
    "*.md"
  ],
  "jest": {
    "preset": "jest-preset-stylelint"
  },
  "remarkConfig": {
    "plugins": [
      "preset-lint-recommended",
      "preset-lint-consistent"
    ]
  },
  "renovate": {
    "extends": [
      "config:base",
      ":automergeMinor"
    ]
  }
}
